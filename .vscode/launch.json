{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch NuGetPuller",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build NuGetPuller",
            "program": "${workspaceFolder}/NuGetPuller/bin/Debug/net8.0/NuGetPuller.dll",
            "args": [
                "-l",
                "-a", "Microsoft.CodeAnalysis.CSharp"
            ],
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceFolder}/NuGetPuller",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "CdnServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build CdnServer",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/CdnServer/bin/Debug/net8.0/CdnServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CdnServer",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "CdnGetter",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build CdnGetter",
            "program": "${workspaceFolder}/CdnGetter/bin/Debug/net8.0/CdnGetter.dll",
            "args": [
                "--Show=CDNs"
            ],
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceFolder}/CdnGetter",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}